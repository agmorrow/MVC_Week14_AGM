<div class="welcomeBox">
<h1 id="welcomeId">Meet TheTechBlog</h1>
<p id="welcomeMsg"> TheTechBlog is a blog site you can use to publish a blog post or comment on other developers blog posts.
</p>
</div>
{{#each posts}}
<section>
    <div class="blog-card">
        <div class="title-content">
            <div class="title">
                <h3><a class="links" href="/post/{{id}}">{{title}}</a></h3>
            </div>
            <div class="user-date">

                <p>Posted by {{user.username}},{{format_date created_at}} </p>

            </div>

        </div>
        <div class="content">
            <p>{{comment}}</p>
        </div>
    </div>
</section>
{{/each}}

